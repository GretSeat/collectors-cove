<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Collector's Cove</title>
    <!-- Fav Icon -->
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/imgs/favicon-32x32.png"
    />
    <!-- BootStrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
      crossorigin="anonymous"
    />
    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
      integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w=="
      crossorigin="anonymous"
    />
    <!-- CSS -->
    <link rel="stylesheet" href="/css/style.css" />
  </head>
<body class="background-color">

  <%- include('partials/navbar') -%>

  <!-- CONTENT BOX -->
    <main class="container" style="padding-top: 70px"> 
      <div class="profile container pt-2 d-flex">
      <!-- ADD POST CONTAINER -->
        <div class="post-container col-4 p-2">
          <!-- USER NAME / EMAIL CONTAINER -->
            <div class="container d-flex justify-content-center border">
              <div class="v-stack text-center pb-2">
                <h2><strong><%= user.userName %></strong></h2> <!-- p Tag Holding the Username given from Database-->
                <span><small><%= user.email %></small></span> <!-- p tag holding Email given from Database-->
                <a href="/logout" class="btn btn-primary d-block mt-1">Logout</a> 
              </div>
                
            </div> 
            <!-- ADD A POST -->
            <div class="container"> 
              <h4>Upload a photo?</h4> 
              <form action="/post/createPost" enctype="multipart/form-data" method="POST"> 
                <div class="mb-3"> 
                    <!-- <label for="title" class="form-label"></label> Title Label for Input -->
                    <input type="text" class="form-control" id="title" name="title" placeholder="Title"> <!-- Input for adding the Post Title -->
                </div> 
                <div class="mb-3"> 
                  <label for="caption" class="form-label">Caption</label> 
                  <textarea class="form-control" id="caption" name="caption" placeholder="Tell us all about your new game!"></textarea> <!-- Text Area for Adding Photo Caption -->
                </div>
                <div class="mb-3"> 
                  <label for="imageUpload" class="form-label">Image</label> <!-- Image Label for Input-->
                  <input type="file" class="form-control" id="imageUpload" name="file"> <!-- Input Area for Image Upload-->
                </div> 
                <!-- RETURN TO FEED BUTTON -->
                <div class="d-flex justify-content-around"> 
                  <a class="btn btn-primary" href="/feed">Return to Feed</a> 
                  <button type="submit" class="btn btn-primary" value="Upload">Post Now</button>
              </div>  
              </form> 
            </div> 
        </div>         
        <!-- IMAGES -->
        <div class="profile-imgs">
           <% for(var i=0; i<posts.length; i++) { %> <!-- For Loop Getting All Posts -->
            <div class="card text-center mb-2">
              <a href="/post/<%= posts.reverse()[i]._id%>" class="col"> <!-- Anchor Tag Holding Each Post -->
                <img class="img-fluid rounded card-img-top" src="<%= posts[i].image%>"> <!-- Image Element That Holds 'Posts' -->
              </a> 
              <div class="card-footer text-body-secondary">                
                  <h5 class="card-title"><%= posts[i].title %></h5>                
              </div>
            </div>
            <% } %> 
        </div>
      </div>
      </main> 
  <!-- FOOTER -->
  <%- include('partials/footer') -%> 
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
</body>
</html>

